{
    "name": "the-circle-frontend",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "avans-nx-workshop",
    "sourceRoot": "apps/the-circle-frontend/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@angular-devkit/build-angular:browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/the-circle-frontend",
                "index": "apps/the-circle-frontend/src/index.html",
                "main": "apps/the-circle-frontend/src/main.ts",
                "polyfills": ["zone.js"],
                "tsConfig": "apps/the-circle-frontend/tsconfig.app.json",
                "assets": [
                    "apps/the-circle-frontend/src/favicon.ico",
                    "apps/the-circle-frontend/src/assets"
                ],
                "styles": ["apps/the-circle-frontend/src/styles.css"],
                "scripts": []
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "2kb",
                            "maximumError": "4kb"
                        }
                    ],
                    "outputHashing": "all",
                    "fileReplacements": [
                        {
                            "replace": "libs/shared/util-env/src/lib/environment.ts",
                            "with": "libs/shared/util-env/src/lib/environment.production.ts"
                        }
                    ]
                },
                "development": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true,
                    "fileReplacements": [
                        {
                            "replace": "libs/shared/util-env/src/lib/environment.ts",
                            "with": "libs/shared/util-env/src/lib/environment.development.ts"
                        }
                    ]
                },
                "render": {
                    "fileReplacements": [
                        {
                            "replace": "libs/shared/util-env/src/lib/environment.ts",
                            "with": "libs/shared/util-env/src/lib/environment.render.ts"
                        }
                    ]
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "executor": "@angular-devkit/build-angular:dev-server",
            "configurations": {
                "production": {
                    "browserTarget": "the-circle-frontend:build:production"
                },
                "development": {
                    "browserTarget": "the-circle-frontend:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "browserTarget": "the-circle-frontend:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "apps/the-circle-frontend/**/*.ts",
                    "apps/the-circle-frontend/**/*.html"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/the-circle-frontend/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "serve-static": {
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "the-circle-frontend:build"
            }
        }
    }
}
